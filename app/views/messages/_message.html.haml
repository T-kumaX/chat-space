.main__contents__content{ "data-message-id": "#{message.id}"}
  .main__contents__content--name
    = message.user.name
  .main__contents__content--date
    = message.created_at.strftime('%Y/%m/%d %H:%M:%S')
  .main__contents__content--text
    - if message.content.present?
      = message.content
    - if message.image.present?
      .message__image-box
        = image_tag message.image.url, class: 'main__contents__content--image'
